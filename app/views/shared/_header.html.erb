<div class="fixed items-center justify-center w-full py-3 bg-primary">
  <div class="relative flex items-center justify-center w-full max-w-wrapper">
    <div class="absolute my-auto left-2 py-2.5">
    <% if back %>
     <% if request.path.include?('/categories/new') %>
       <%= link_to(home_categories_path, class: "text-white text-2xl py-2 px-5") do %>
         <img class="h-6" src="data:image/png;base64,">
       <% end %>
       <% elsif request.path == category_exchanges_path %>
       <%= link_to(home_categories_path, class: "text-white text-2xl py-2 px-5") do %>
         <img class="h-6" src="data:image/png;base64,">
       <% end %>
      <% else %>
        <%= link_to("javascript:history.back()", class: "text-white text-2xl px-5 py-2.5") do %>
          <img class="h-6" src="data:image/png;base64,">
        <% end %>
      <% end %>	     
    <% else %>
      <button class="text-white  focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-1 py-2.5 mr-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" type="button" data-drawer-target="drawer-navigation" data-drawer-show="drawer-navigation" aria-controls="drawer-navigation">
        <svg class="w-6 h-6 text-white" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
            <path clip-rule="evenodd" fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zm0 10.5a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5a.75.75 0 01-.75-.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10z"></path>
        </svg>
      </button>
    <% end %>
    </div>
    <div class="text-2xl text-white capitalize">
      <%= @header %>
    </div>
  </div>
</div>
